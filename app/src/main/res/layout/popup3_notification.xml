<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0f1123">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dialog"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="15dp"
        android:paddingRight="16dp"
        android:paddingBottom="15dp">
        <LinearLayout
            android:id="@+id/pnlclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingLeft="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="@color/text_heding"
                android:textSize="@dimen/sp24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pnlcenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/sp16">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile3" />


                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img1"
                        android:paddingLeft="@dimen/sp15"
                        android:text="Suraj Gupta has requested you to add money to his goal Occulus Rift"
                        android:textColor="@color/white"
                        android:fontFamily="@font/circularstdm"
                        android:textSize="18sp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:paddingTop="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ENTER AMOUNT"
                        android:fontFamily="@font/circularstdb"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/sp12" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/enterAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="â‚¹00"
                        android:textColor="@color/white"
                        android:inputType="number"
                        android:textColorHint="@color/text_heding"
                        android:fontFamily="@font/circularstdm"
                        android:textSize="31dp">
                    </androidx.appcompat.widget.AppCompatEditText>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/line" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnlBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/round_button"
                android:text="ADD"
                android:fontFamily="@font/circularstdm"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp13">


            </Button>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>