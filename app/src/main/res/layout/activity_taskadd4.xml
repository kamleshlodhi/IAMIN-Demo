<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".investment.RewardsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lnlBottomBar"
                android:background="@color/bg_investment">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/pnltop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/Left"
                        android:paddingTop="16dp"
                        android:paddingRight="@dimen/Right"
                        android:background="@color/toolbar_color"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btnback"
                                android:layout_width="15dp"
                                android:layout_height="30dp"
                                android:rotation="180"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_navigate_next_24dp" />

                            <TextView
                                android:id="@+id/txtheading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="TASK FOR ME"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:orientation="vertical"
                            android:paddingTop="24dp">

                            <TextView
                                android:id="@+id/txtTaskName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.1"
                                android:text="MakeBed"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp18" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="12dp"
                                android:paddingBottom="20dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:letterSpacing="0.1"
                                        android:text="DURATION"
                                        android:textAllCaps="true"
                                        android:textColor="@color/text_heding"
                                        android:textSize="@dimen/sp12" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:text="Every Sunday for 4w"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp16" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="REWARD"
                                        android:textAllCaps="true"
                                        android:textColor="@color/text_heding"
                                        android:textSize="@dimen/sp12" />

                                    <TextView
                                        android:id="@+id/txtRewards"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="â‚¹500"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp16" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/pnltop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/Left"
                        android:paddingRight="@dimen/Right"
                        android:paddingTop="24dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Who will do the task?"
                            android:textColor="#8c9db6"
                            android:textSize="@dimen/sp12" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/txtSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:drawableLeft="@drawable/ic_search"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:hint="Search here..."
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_heding"
                            android:textSize="@dimen/sp16"
                            app:backgroundTint="@color/text_heding" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="Frequent"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <LinearLayout
                                android:id="@+id/pnlitem1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="35.7dp"
                                        android:layout_height="35.7dp"
                                        android:src="@drawable/profile3"
                                        app:civ_border_color="#FF000000"
                                        app:civ_border_width="2dp" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingRight="17dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:paddingLeft="@dimen/Left"
                                        android:text="Take Medicine"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp14" />

                                    <ImageView
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:alpha="0.5"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/right_arrow" />
                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/line" />

                            <LinearLayout
                                android:id="@+id/pnlitem2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="35.7dp"
                                        android:layout_height="35.7dp"
                                        android:src="@drawable/profile3"
                                        app:civ_border_color="#FF000000"
                                        app:civ_border_width="2dp" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingRight="17dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:paddingLeft="@dimen/Left"
                                        android:text="Take Medicine"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp14" />

                                    <ImageView
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:alpha="0.5"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/right_arrow" />
                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/line" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="Others"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="35.7dp"
                                        android:layout_height="35.7dp"
                                        android:src="@drawable/profile3"
                                        app:civ_border_color="#FF000000"
                                        app:civ_border_width="2dp" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingRight="17dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:paddingLeft="@dimen/Left"
                                        android:text="Take Medicine"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp14" />

                                    <ImageView
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:alpha="0.5"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/right_arrow" />
                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="35.7dp"
                                        android:layout_height="35.7dp"
                                        android:src="@drawable/profile3"
                                        app:civ_border_color="#FF000000"
                                        app:civ_border_width="2dp" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingRight="17dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:paddingLeft="@dimen/Left"
                                        android:text="Take Medicine"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp14" />

                                    <ImageView
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:alpha="0.5"
                                        android:layout_alignParentRight="true"
                                        android:src="@drawable/right_arrow" />
                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/line" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="Invite from contacts"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="35.7dp"
                                        android:layout_height="35.7dp"
                                        android:src="@drawable/profile3"
                                        app:civ_border_color="#FF000000"
                                        app:civ_border_width="2dp" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingRight="17dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:paddingLeft="@dimen/Left"
                                        android:text="Take Medicine"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp14" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/tvborderdark"
                                        android:padding="4dp"
                                        android:text=" Send Invite "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp12" />


                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="8dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="35.7dp"
                                        android:layout_height="35.7dp"
                                        android:src="@drawable/profile3"
                                        app:civ_border_color="#FF000000"
                                        app:civ_border_width="2dp" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingRight="17dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:paddingLeft="@dimen/Left"
                                        android:text="Take Medicine"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp14" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/tvborderdark"
                                        android:padding="4dp"
                                        android:text=" Send Invite "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp12" />


                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/line" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>