<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".investment.RewardsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_above="@+id/lnlBottomBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_investment">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/pnltop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/toolbar_color"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingLeft="@dimen/Left"
                        android:paddingRight="@dimen/Right"
                        android:paddingBottom="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/btnback"
                                android:layout_width="15dp"
                                android:layout_height="30dp"
                                android:rotation="180"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_navigate_next_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Task"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp14" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/plnRewards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="24dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.1"
                                android:text="Create your TASK"
                                android:textAllCaps="true"
                                android:textColor="@color/text_heding"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/plnForMe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            >

                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/ic_group_4" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/icon1"
                                android:layout_toLeftOf="@+id/icon2"
                                android:paddingLeft="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.1"
                                    android:text="For Me"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="16dp"
                                    android:text="Complete the task and earn from your family and friends"
                                    android:textColor="@color/text_heding"
                                    android:textSize="@dimen/sp12" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_navigate_next_24dp" />





                        </RelativeLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:id="@+id/plnForOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            >

                            <ImageView
                                android:id="@+id/icon11"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:src="@drawable/ic_group_4" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/icon11"
                                android:layout_toLeftOf="@+id/icon22"
                                android:paddingLeft="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:letterSpacing="0.1"
                                    android:text="For others"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="16dp"
                                    android:text="Give reward to friends and family for completing the task"
                                    android:textColor="@color/text_heding"
                                    android:textSize="@dimen/sp12" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/icon22"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_navigate_next_24dp" />





                        </RelativeLayout>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/line" />
                    </LinearLayout>


                </RelativeLayout>
            </ScrollView>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>